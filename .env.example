# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=production

# Redis Configuration
# Point these to your existing Redis server on Unraid
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cookie Configuration
COOKIE_NAME=dinner_roulette_user
COOKIE_MAX_AGE=31536000
COOKIE_HTTPONLY=True
COOKIE_SECURE=False
COOKIE_SAMESITE=Lax

# Restaurant Categories (comma-separated)
# These are the default categories available when the app starts
# Users can add custom categories through the UI
DEFAULT_CATEGORIES=quick,sit-down,nice

# Distance Levels (comma-separated)
# Available distance options for restaurants
VALID_DISTANCES=nearby,short-drive,medium-drive,far
DEFAULT_DISTANCE=nearby

# "Eat at Home" Weighted Option
# Enable/disable the "Eat at Home" option in the randomizer
EAT_AT_HOME_ENABLED=True
# Weight determines how many times this option appears in the selection pool
# Higher weight = more likely to be selected (e.g., 2 means twice as likely as a single restaurant)
EAT_AT_HOME_WEIGHT=2
# Customize the display name of this option
EAT_AT_HOME_NAME=Eat at Home

# History Retention
# Number of days to keep spin history (default: 30)
# Older entries are automatically deleted when new spins are added
HISTORY_RETENTION_DAYS=30

# Backup Configuration
# Directory path where automatic backups are saved
# Default: /app/backups (inside container)
# Map this to a persistent volume in your Docker/Unraid setup
BACKUP_DIR=/app/backups

# Spin Rate Limiting
# Minimum number of seconds between spins per user (default: 300 = 5 minutes)
# Set to 0 to disable rate limiting
SPIN_TIMEOUT_SECONDS=300
